    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Main",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\main.py",
            "console":"integratedTerminal",
            "stopOnEntry" :true,
            "env": "${workspaceFolder}\\.env\\Scripts\\activateTuMadre.bat"
        },
        {
            "name": "Python: Run File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console":"integratedTerminal",
            "stopOnEntry" :true,
            "env": "${workspaceFolder}\\.env\\Scripts\\activateTuMadre.bat"
        }

    ]
}